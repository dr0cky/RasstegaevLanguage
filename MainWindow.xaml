<Window x:Class="RasstegaevLanguage.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RasstegaevLanguage"
        mc:Ignorable="d"
        Title="Языковая школа" Height="450" Width="800" FontFamily="Comic Sans MC" Icon="images\school_logo.ico">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="94*"/>
            <RowDefinition Height="315*"/>
            <RowDefinition Height="25*"/>
        </Grid.RowDefinitions>
        <Image Source="images/school_logo.png" HorizontalAlignment="Left"/>
        <TextBlock Text="Языковая школа" FontSize ="30" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Frame Grid.Row="1" Name="MainFrame" Margin="0,13,0,0"/>
    </Grid>
</Window>
